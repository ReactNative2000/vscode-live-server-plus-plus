{
	"compilerOptions": {
		"target": "ES2017",
		"module": "commonjs",
		"outDir": "./out",
		"rootDir": "./src",
		"strict": false,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"sourceMap": false,
		"moduleResolution": "node",
		"resolveJsonModule": true
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "out"]
}
